@model IEnumerable<TiendaWed.Models.PedidoModel>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var nombreUsuario = HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario") ?? "Invitado";
    var rolUsuario = HttpContextAccessor.HttpContext.Session.GetString("RolUsuario") ?? "Cliente";
    var carritoCantidad = HttpContextAccessor.HttpContext.Session.GetInt32("CarritoCantidad") ?? 0;
}
<link href="~/css/Compra.css" rel="stylesheet" />

<div class="container mt-4">
    <!-- Botón volver al menú -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Mis Compras</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left-circle me-2"></i> Volver al Menú
        </a>
    </div>


    

    @if (Model != null && Model.Any())
    {
        foreach (var compra in Model)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <!-- Cabecera con fecha y número -->
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            📅 @compra.Fecha.ToString("dd 'de' MMMM yyyy")
                        </small>
                        <span class="fw-bold text-primary">Compra #@compra.Id</span>
                    </div>

                    <!-- Productos -->
                    @if (compra.Detalles != null && compra.Detalles.Any())
                    {
                        var producto = compra.Detalles.First();

                        string urlImagen = string.IsNullOrEmpty(producto.UrlImagen)
                        ? Url.Content("~/Produimage/sin-imagen.png")  // imagen por defecto
                        : (producto.UrlImagen.StartsWith("/Produimage/")
                        ? Url.Content(producto.UrlImagen)          // ya tiene ruta
                        : Url.Content("~/Produimage/" + producto.UrlImagen)); // solo nombre

                        <div class="d-flex align-items-center mt-2">
                            <img src="@urlImagen"
                                 alt="@producto.Nombre"
                                 class="me-3 rounded shadow-sm"
                                 style="width:80px;height:80px;object-fit:cover;" />
                            <div>
                                <h6 class="mb-1">@producto.Nombre</h6>
                                <small class="text-muted">@producto.Cantidad unidad(es)</small>
                                <br />
                                <small class="fw-bold">Subtotal: @producto.Subtotal.ToString("C")</small>
                            </div>
                        </div>
                    }

                    <!-- Total -->
                    <p class="mt-3 fw-bold">💰 Total: @compra.Total.ToString("C")</p>

                    <!-- Botones -->
                    <div class="d-flex justify-content-end mt-3">
                        <a asp-action="DetalleCompra" asp-route-id="@compra.Id"
                           class="btn btn-sm btn-primary me-2">
                            <i class="bi bi-eye"></i> Ver compra
                        </a>
                        <a asp-action="RepetirCompra" asp-route-id="@compra.Id"
                           class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-arrow-repeat"></i> Volver a comprar
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            No tienes compras registradas aún 🛒
        </div>
    }
</div>
