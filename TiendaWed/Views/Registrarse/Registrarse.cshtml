@model TiendaWed.Models.Registrarse

@{
    ViewData["Title"] = "Registrarse";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #2c3e50;
        }

        .bg {
            background-image: url('/css/img/VERDU.jpg');
            background-position: center center;
            background-size: cover;
        }

        .form-wrapper {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="container mt-5 shadow form-wrapper">
        <div class="row align-items-stretch">

            <!-- Imagen lateral -->
            <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6"></div>

            <!-- Formulario -->
            <div class="col p-5">
                <h2 class="fw-bold text-center py-4">Regístrate</h2>

                <!-- Mensajes -->
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center">@TempData["Success"]</div>
                }
                @if (TempData["ErrorRegistro"] != null)
                {
                    <div class="alert alert-danger text-center">@TempData["ErrorRegistro"]</div>
                }

                <form asp-action="Registrase" asp-controller="Datos" method="post" id="formRegistro">

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" type="number" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <!-- Rol fijo como Cliente -->
                    <input type="hidden" asp-for="Rol" value="Cliente" />

                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Contraseña" class="form-label"></label>
                        <input asp-for="Contraseña" type="password" class="form-control" />
                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Registrarse</button>
                    </div>

                    <div class="my-3 text-center">
                        <a asp-controller="Logins" asp-action="Logins">¿Ya tienes cuenta? Inicia sesión</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
