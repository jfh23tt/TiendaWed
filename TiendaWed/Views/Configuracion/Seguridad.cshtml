@{
    ViewData["Title"] = "Seguridad";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #121212;
            color: #f1f1f1;
            font-family: 'Segoe UI', sans-serif;
        }

        .content-area {
            padding: 3rem;
            background-color: #1e1e1e;
            min-height: 100vh;
            border-radius: 10px;
            max-width: 600px;
            margin: auto;
        }

        .form-control {
            background-color: #2c2c2c;
            border: 1px solid #444;
            color: #ffffff;
        }

            .form-control:focus {
                background-color: #2c2c2c;
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.2rem rgba(13,110,253,.25);
            }

        .form-label {
            font-weight: 500;
            color: #dddddd;
        }

        .section-title {
            font-weight: bold;
            color: #ffffff;
            text-align: center;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
            }

        .alert {
            border-radius: 8px;
        }
    </style>
    <style>
        #passwordHelp {
            color: white !important;
        }
    </style>

</head>
<body>

    <div class="container mt-5">
        <div class="content-area shadow">
            <h2 class="section-title mb-4">🔒 Seguridad de la Cuenta</h2>

            <!-- Mensajes dinámicos -->
            @if (TempData["MensajeExito"] != null)
            {
                <div class="alert alert-success">@TempData["MensajeExito"]</div>
            }
            @if (TempData["MensajeError"] != null)
            {
                <div class="alert alert-danger">@TempData["MensajeError"]</div>
            }

            <form asp-action="Seguridads" asp-controller="Configuracion" method="post" onsubmit="return validarFormulario()">
                <div class="mb-3">
                    <label for="actual" class="form-label">Contraseña actual</label>
                    <input type="password" class="form-control" id="actual" name="ContrasenaActual" required />
                </div>

                <div class="mb-3">
                    <label for="nueva" class="form-label">Nueva contraseña</label>
                    <input type="password" class="form-control" id="nueva" name="NuevaContrasena" required minlength="6" />
                    <small id="passwordHelp" class="form-text text-white">
                        Mínimo 6 caracteres
                    </small>
                </div>


                <div class="mb-4">
                    <label for="confirmar" class="form-label">Confirmar nueva contraseña</label>
                    <input type="password" class="form-control" id="confirmar" name="ConfirmarContrasena" required />
                    <div id="mensajeError" class="text-danger mt-1" style="display:none;">Las contraseñas no coinciden</div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Actualizar Contraseña</button>
                </div>
            </form>

        </div>
    </div>

    <script>
        function validarFormulario() {
            const nueva = document.getElementById("nueva").value;
            const confirmar = document.getElementById("confirmar").value;
            const mensajeError = document.getElementById("mensajeError");

            if (nueva !== confirmar) {
                mensajeError.style.display = "block";
                return false; // evita envío
            }
            mensajeError.style.display = "none";
            return true;
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
