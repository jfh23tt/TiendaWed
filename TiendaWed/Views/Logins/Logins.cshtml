@model LoginsModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #2c3e50;
        }

        .bg {
            background-image: url('/css/img/VERDU.jpg');
            background-position: center center;
            background-size: cover;
        }

        .form-wrapper {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="container mt-5 shadow form-wrapper">
        <div class="row align-items-stretch">
            <!-- Imagen -->
            <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6"></div>

            <!-- Formulario -->
            <div class="col p-5">
                <h2 class="fw-bold text-center py-4">Bienvenido</h2>

                <!-- Mensajes -->
                @if (ViewData["Success"] != null)
                {
                    <div class="alert alert-success text-center">@ViewData["Success"]</div>
                }
                @if (ViewData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">@ViewData["Error"]</div>
                }

                <form asp-action="Inicio" asp-controller="Logins" method="post">
                    <div class="mb-3">
                        <label class="form-label">Correo</label>
                        <input asp-for="correo" type="email" class="form-control" placeholder="Ingresa tu correo" required />
                        <span asp-validation-for="correo" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input asp-for="contraseña" type="password" class="form-control" placeholder="Ingresa tu contraseña" required />
                        <span asp-validation-for="contraseña" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    </div>
                    <div class="my-3 text-center">
                        <a href="/Datos/Registrarse">¿No tienes cuenta? Regístrate</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
