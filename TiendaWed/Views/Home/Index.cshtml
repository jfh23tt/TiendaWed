@model IEnumerable<ProductoModel>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var nombreUsuario = HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario") ?? "Invitado";
    var rolUsuario = HttpContextAccessor.HttpContext.Session.GetString("RolUsuario") ?? "Cliente";
    var carritoCantidad = HttpContextAccessor.HttpContext.Session.GetInt32("CarritoCantidad") ?? 0;
    
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TiendaWed - Menú</title>

    <!-- Bootstrap y estilos -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/css/principalstyle.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <!-- NAVBAR PRINCIPAL -->
    <nav class="d-flex navbar navbar-expand-lg navbar-custom shadow-sm">
        <div class="container-fluid">
            <!-- LOGO -->
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shop-window me-2"></i> TiendaWed
            </a>

            <!-- BUSCADOR -->
            <form class="d-flex search-box mx-auto w-50" asp-controller="Producto" asp-action="Buscar" method="get">
                <input class="form-control px-4" type="search" name="query" placeholder="Buscar productos..." required>
                <button class="btn btn-light ms-2" type="submit">
                    <i class="bi bi-search text-primary"></i>
                </button>
            </form>

            <!-- MENÚ DERECHO -->
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item dropdown me-3">
                    <a class="nav-link dropdown-toggle fw-bold text-warning" href="#" id="usuarioDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @nombreUsuario
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @if (rolUsuario?.ToLower() == "admin")
                        {
                            <li><a class="dropdown-item" href="~/Producto/Inventario">📦 Inventario</a></li>
                            <li><a class="dropdown-item" href="~/Admin/Usuario"> Usuario</a></li>
                        }
                      
                        <li><a class="dropdown-item" href="~/Configuracion/Configuracion">⚙️ Configuraciones</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="~/Logins/CerrarSesion">🚪 Cerrar sesión</a></li>
                    </ul>
                </li>

                <li class="nav-item me-3"><a class="nav-link" asp-controller="Carrito" asp-action="Compras">Mis compras</a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Favoritos</a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#"><i class="bi bi-bell fs-5"></i></a></li>
                <li class="nav-item">
                    <a class="nav-link position-relative" asp-controller="Carrito" asp-action="Carrito">
                        <!-- Logo del carrito -->
                        <i class="bi bi-cart3 fs-4"></i>

                        <!-- Cantidad -->
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger carrito-cantidad">
                            @carritoCantidad
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- ALERTAS DE MENSAJE -->
    <div class="container mt-3">
        @if (TempData["MensajeExito"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["MensajeExito"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["MensajeError"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["MensajeError"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>


    <!-- NAVBAR CATEGORÍAS -->
    <div class="navbar-categorias shadow-sm py-2">
        <div class="container-fluid d-flex">
            <ul class="navbar-nav flex-row">
                <li class="nav-item dropdown me-3">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Categorías</a>
                    <ul class="dropdown-menu shadow-sm border-0 rounded">
                        <li><a class="dropdown-item" href="#">Electrónica</a></li>
                        <li><a class="dropdown-item" href="#">Hogar</a></li>
                        <li><a class="dropdown-item" href="#">Ropa</a></li>
                    </ul>
                </li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Ofertas</a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Cupones</a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Supermercado <span class="badge bg-primary">Nuevo</span></a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Moda</a></li>               
                <li class="nav-item"><a class="nav-link" href="#">Ayuda / PQR</a></li>
            </ul>
        </div>
    </div>

    <!-- CARRUSEL -->
    <div id="carouselExampleDark" class="carousel slide" data-bs-ride="carousel" style="max-height:400px; overflow:hidden;">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="3000">
                <img src="~/css/img/V.jpg" class="d-block w-100 img-slider" alt="Producto">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="~/css/Img/VERDU.jpg" class="d-block w-100 img-slider" alt="Producto">
            </div>
            <div class="carousel-item active" data-bs-interval="3000">
                <img src="~/css/img/j.jpg" class="d-block w-100 img-slider" alt="Producto">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="~/css/Img/ñññ.jpg" class="d-block w-100 img-slider" alt="Producto">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
    <!-- PRODUCTOS -->
    <div class="container-fluid my-5">
        <h3 class="mb-4 fw-bold text-primary">Productos destacados</h3>
        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card shadow-sm h-100 producto-card">
                        <img src="@(string.IsNullOrEmpty(producto.Urlimagen) ? Url.Content("~/css/Imagenes/sin-imagen.png") : producto.Urlimagen)"
                             class="card-img-top" alt="@producto.Nombre" />
                        <div class="card-body">
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text">@producto.Descripcion</p>
                            <p><b>Categoría:</b> @producto.Categoria</p>
                            <p class="precio">@producto.Precio.ToString("C")</p>

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-outline-danger btn-sm btnna" id="@producto.Id">Ver más</button>
                            </div>

                            <!-- Botón Ajax para añadir al carrito -->
                            <div class="mt-3">
                                <input type="hidden" class="codigo" value="@producto.Codigo" />
                                <input type="number" class="form-control mb-2 cantidad" value="1" min="1" />
                                <button type="button" class="btn btn-outline-success btn-sm w-100 btnAgregar">
                                    Añadir al carrito
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


    <!-- FOOTER -->
    <footer class="footer text-center py-4">
        <div class="container">
            <p class="mb-1">© 2025 TiendaWed. Todos los derechos reservados.</p>
            <p>
                <a href="#">Política de Privacidad</a> |
                <a href="#">Términos y Condiciones</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    <script>
        // Modal detalle producto
        $(document).on('click', '.btnna', function () {
            var id = $(this).attr("id");
            $('#modalprod').modal('show');

            $.ajax({
                url: '/Producto/detalleProducto',
                type: 'GET',
                data: { id: id },
                success: function (data) {
                    const contenido = `
                        <div class="row">
                            <div class="col-md-6">
                                <img class="img-fluid" src="${data.urlimagen}" />
                            </div>
                            <div class="col-md-6">
                                <h5>${data.nombre}</h5>
                                <p><b>Categoría:</b> ${data.categoria}</p>
                                <p><b>Descripcion:</b>${data.descripcion}</p>
                                <p class="text-success"><b>Precio:</b> $${data.precio}</p>
                            </div>
                        </div>`;
                    $('#modalBody').html(contenido);
                },
                error: function () {
                    $('#modalBody').html('Error al cargar los datos');
                }
            });
        });
    </script>

    <!-- MODAL DETALLE -->
    <div class="modal fade" id="modalprod" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h4 class="modal-title">Información del producto</h4>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalBody">Cargando...</div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).on("click", ".btnAgregar", function () {
            var card = $(this).closest(".card-body");
            var codigo = card.find(".codigo").val();
            var cantidad = card.find(".cantidad").val();

            $.ajax({
                url: '/Carrito/Agregar',
                type: 'POST',
                data: { codigo: codigo, cantidad: cantidad },
                success: function (data) {
                    if (data.success) {
                        // Mensaje de confirmación
                        Swal.fire({
                            icon: 'success',
                            title: 'Agregado',
                            text: data.mensaje,
                            timer: 1500,
                            showConfirmButton: false
                        });

                        // Actualizar contador en el carrito
                        $(".badge.bg-danger").text(data.totalItems);
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Aviso',
                            text: data.mensaje
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'No se pudo agregar al carrito'
                    });
                }
            });
        });
    </script>

</body>
</html>
