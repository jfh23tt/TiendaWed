@model IEnumerable<ProductoModel>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var nombreUsuario = HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario") ?? "Invitado";
    var rolUsuario = HttpContextAccessor.HttpContext.Session.GetString("RolUsuario") ?? "Cliente";
    var carritoCantidad = HttpContextAccessor.HttpContext.Session.GetInt32("CarritoCantidad") ?? 0;
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TiendaWed - Menú</title>

    <!-- Bootstrap y estilos -->
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* NAVBAR PRINCIPAL */
        .navbar-custom {
            background: linear-gradient(90deg, #0d6efd, #2b6eca);
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link,
            .navbar-custom .btn {
                color: #fff !important;
            }

                .navbar-custom .nav-link:hover {
                    color: #ffc107 !important;
                }

        /* BUSCADOR */
        .search-box input {
            border-radius: 30px;
            border: 1px solid #ddd;
        }

        .search-box button {
            border-radius: 30px;
        }

        /* NAVBAR CATEGORÍAS */
        .navbar-categorias {
            background-color: #fff;
            border-bottom: 1px solid #ddd;
        }

            .navbar-categorias .nav-link {
                color: #444;
                font-weight: 500;
                transition: 0.3s;
            }

                .navbar-categorias .nav-link:hover {
                    color: #0d6efd;
                    transform: translateY(-2px);
                }

        /* CARRUSEL */
        .carousel-inner img {
            width: 100%;
            height: 100vh;
            object-fit: cover;
        }

        /* CARDS PRODUCTOS */
        .card {
            border: none;
            transition: all 0.3s ease-in-out;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
            }

        .card-title {
            color: #0d6efd;
            font-weight: bold;
        }

        .card-text {
            font-size: 0.95rem;
            color: #555;
        }

        .precio {
            font-size: 1.2rem;
            color: #198754;
            font-weight: bold;
        }

        /* FOOTER */
        .footer {
            background: #2b6eca;
            color: white;
            padding: 30px 0;
        }

            .footer a {
                color: #ffc107;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        .img-slider {
            max-height: 400px; /* 👈 Ajusta el tamaño aquí */
            object-fit: cover; /* Mantiene la proporción sin deformar */
        }
    </style>
</head>
<body>

    <!-- NAVBAR PRINCIPAL -->
    <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
        <div class="container-fluid">
            <!-- LOGO -->
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shop-window me-2"></i> TiendaWed
            </a>

            <!-- BUSCADOR -->
            <form class="d-flex search-box mx-auto w-50" asp-controller="Producto" asp-action="Buscar" method="get">
                <input class="form-control px-4" type="search" name="query" placeholder="Buscar productos..." required>
                <button class="btn btn-light ms-2" type="submit">
                    <i class="bi bi-search text-primary"></i>
                </button>
            </form>

            <!-- MENÚ DERECHO -->
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item dropdown me-3">
                    <a class="nav-link dropdown-toggle fw-bold text-warning" href="#" id="usuarioDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @nombreUsuario
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="usuarioDropdown">
                        <li><a class="dropdown-item" href="~/Producto/Inventario"> Inventario</a></li>
                        <li><a class="dropdown-item" href="~/Configuracion/Configuracion">⚙️ Configuraciones</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="~/Logins/CerrarSesion">🚪 Cerrar sesión</a></li>
                    </ul>
                </li>


                @if (rolUsuario == "Admin")
                {
                    <li class="nav-item me-3">
                        <a class="nav-link text-light" asp-controller="Admin" asp-action="Index">Panel Admin</a>
                    </li>
                }

                <li class="nav-item me-3"><a class="nav-link" asp-controller="Carrito" asp-action="Compras">Mis compras</a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Favoritos</a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#"><i class="bi bi-bell fs-5"></i></a></li>
                <li class="nav-item">
                    <a class="nav-link position-relative" asp-controller="Carrito" asp-action="Carrito">
                        <i class="bi bi-cart3 fs-4"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @carritoCantidad
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- NAVBAR CATEGORÍAS -->
    <div class="navbar-categorias shadow-sm py-2">
        <div class="container-fluid d-flex">
            <ul class="navbar-nav flex-row">
                <li class="nav-item dropdown me-3">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Categorías</a>
                    <ul class="dropdown-menu shadow-sm border-0 rounded">
                        <li><a class="dropdown-item" href="#">Electrónica</a></li>
                        <li><a class="dropdown-item" href="#">Hogar</a></li>
                        <li><a class="dropdown-item" href="#">Ropa</a></li>
                    </ul>
                </li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Ofertas</a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Cupones</a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Supermercado <span class="badge bg-primary">Nuevo</span></a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Moda</a></li>
                <li class="nav-item me-3"><a class="nav-link" href="#">Vender</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Ayuda / PQR</a></li>
            </ul>
        </div>
    </div>


    <!-- CARRUSEL CON TAMAÑO REDUCIDO -->
    <div id="carouselExampleDark" class="carousel slide" data-bs-ride="carousel" style="max-height:400px; overflow:hidden;">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="3000">
                <img src="~/css/Imagenes/computador.jpg" class="d-block w-100 img-slider" alt="Producto">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="~/css/Imagenes/computador.jpg" class="d-block w-100 img-slider" alt="Producto">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- LISTADO DE PRODUCTOS -->
    <div class="container-fluid my-5">
        <h3 class="mb-4 fw-bold text-primary">Productos destacados</h3>
        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card shadow-sm h-100">
                        <img src="@(string.IsNullOrEmpty(producto.Urlimagen) ? Url.Content("~/css/Imagenes/sin-imagen.png") : producto.Urlimagen)"
                             class="card-img-top" alt="@producto.Nombre" />
                        <div class="card-body">
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text">@producto.Descripcion</p>
                            <p><b>Categoría:</b> @producto.Categoria</p>
                            <p class="precio">@producto.Precio.ToString("C")</p>
                            <div class="d-flex justify-content-between">
                                <form asp-action="ComprarAhora" asp-controller="Carrito" method="post">
                                    <input type="hidden" name="productoId" value="@producto.Id" />
                                    <input type="hidden" name="cantidad" value="1" />
                                    <button type="submit" class="btn btn-primary btn-sm">Comprar</button>
                                </form>


                                <button type="button" class="btn btn-outline-danger btn-sm btnna" id="@producto.Id">Ver más</button>
                            </div>
                            <form asp-action="Agregar" asp-controller="Carrito" method="post" class="mt-3">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="codigo" value="@producto.Codigo" />
                                <input type="number" name="cantidad" value="1" min="1" class="form-control mb-2" />
                                <button class="btn btn-outline-success btn-sm w-100">Ir al carrito</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


    <!-- FOOTER -->
    <footer class="footer text-center">
        <div class="container">
            <p class="mb-1">© 2025 TiendaWed. Todos los derechos reservados.</p>
            <p>
                <a href="#">Política de Privacidad</a> |
                <a href="#">Términos y Condiciones</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script>
        $(document).on('click', '.btnna', function () {
            var id = $(this).attr("id");
            $('#modalprod').modal('show');

            $.ajax({
                url: '/Producto/detalleProducto',
                type: 'GET',
                data: { id: id },
                success: function (data) {
                    const contenido = `
                        <div class="row">
                            <div class="col-md-6">
                                <img class="img-fluid" src="${data.urlimagen}" />
                            </div>
                            <div class="col-md-6">
                                <h5>${data.nombre}</h5>
                                <p><b>Categoría:</b> ${data.categoria}</p>
                                <p><b>Descripcion:</b>${data.descripcion}</p>
                                <p class="text-success"><b>Precio:</b> $${data.precio}</p>
                            </div>
                        </div>`;
                    $('#modalBody').html(contenido);
                },
                error: function () {
                    $('#modalBody').html('Error al cargar los datos');
                }
            });
        });
    </script>

    <!-- MODAL DETALLE -->
    <div class="modal fade" id="modalprod" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h4 class="modal-title">Información del producto</h4>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalBody">Cargando...</div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
